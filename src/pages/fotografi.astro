---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Heading from "../components/Heading.astro";
---

<MainLayout title="Victoria Bruun-Henriksen">
  <main class="flex flex-col items-center pt-12 relative">
    <!-- Heading -->
    <Heading
      Htmlheading="h1"
      size="large"
      font="anton"
      class="text-4xl md:text-6xl font-bold text-white mb-8 text-center"
    >
      FOTOGRAFI
    </Heading>

    <!-- bog.webp kun p책 desktop -->
    <div class="relative hidden md:block">
      <img
        src="/bog.webp"
        alt="bog"
        class="w-auto max-w-[40rem] object-contain"
      />

      <!-- photo ovenp책 bog.webp (kun p책 desktop) -->
      <img
        src="/photomedtape.png"
        alt="photo"
        class="absolute left-117 top-10 w-auto max-w-[18rem] object-contain transform -translate-x-1/2"
      />
    </div>

    <!-- photo kun p책 mobil -->
    <img
      src="/photomedtape.png"
      alt="photo"
      class="md:hidden w-auto max-w-[18rem] object-contain mt-8"
    />
  </main>
</MainLayout>
