---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header x-data="{ showmenu: false }">
  <div
    id="navbar"
    class="container mx-auto p-4 flex flex-row justify-between items-center"
  >
    <div id="logo">
      <a href="/">
        <img
          src="/navn.webp"
          alt="Victoria Bruun-Henriksen"
          class="h-12 md:h-16"
        />
      </a>
    </div>

    <!-- Desktop menu -->
    <nav id="desktopmenu" class="hidden lg:block">
      <ul class="flex flex-row gap-4">
        <li>
          <a
            href="/fotografi/"
            class={`transition-colors duration-300 ${
              currentPath === "fotografi/"
                ? "font-bold text-[var(--color-secondary-500)]"
                : "hover:text-[var(--color-secondary-500)]"
            }`}
          >
            Fotografi
          </a>
        </li>
        <li>
          <a
            href="/videografi/"
            class={`transition-colors duration-300 ${
              currentPath === "videografi/"
                ? "font-bold text-[var(--color-secondary-500)]"
                : "hover:text-[var(--color-secondary-500)]"
            }`}
          >
            Videografi
          </a>
        </li>
      </ul>
    </nav>

    <!-- Burgerknap -->
    <button
      id="burgermenu"
      class="lg:hidden text-3xl p-2"
      x-on:click="showmenu = !showmenu"
    >
      â˜°
    </button>
  </div>

  <!-- Mobil menu -->

  <nav
    id="mobilmenu"
    class="flex flex-col content-center animate-fade-down animate-duration-1000"
    x-show="showmenu"
    x-transition
    x-on:click="showmenu = false"
    x-on:click.outside="showmenu = false"
  >
    <ul class="border-t-2 border-b-2 border-black">
      <li class="text-center py-2">
        <a
          href="/fotografi/"
          class={`transition-colors duration-300 ${
            currentPath === "fotografi/"
              ? "font-bold text-[var(--color-secondary-500)]"
              : "hover:text-[var(--color-secondary-500)]"
          }`}
        >
          Fotografi
        </a>
      </li>
      <li class="text-center py-2">
        <a
          href="/videografi/"
          class={`transition-colors duration-300 ${
            currentPath === "videografi/"
              ? "font-bold text-[var(--color-secondary-500)]"
              : "hover:text-[var(--color-secondary-500)]"
          }`}
        >
          Videografi
        </a>
      </li>
    </ul>
  </nav>
</header>
